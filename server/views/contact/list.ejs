<div class="col-md-offset-3 col md-8">
  <h1><%= title %></h1>
  <%if(typeof displayName =='string' && displayName){%>
  <a href="/contactList/add" class="btn btn-primary" role="button">
    <i class="fas fa-plus-circle"></i>Add a Book</a
  >
  <%}%>
  <br />
  <table class="table table-bordered table-striped table-hover">
    <tr>
      <th class="text-content col-2">Title</th>
      <th class="text-content col-2">Author</th>
      <th class="text-content col-1">Year</th>
      <th class="col-6">Description</th>
      <th class="text-content col-1">Price</th>

      <% if(typeof displayName =='string' && displayName) {%>
      <th class="text-content col-1"></th>
      <th class="text-content col-1"></th>
      <%}%>
    </tr>
    <% for(let count = 0; count < ContactList.length; count++) { %>
    <tr>
      <td class="text-center col-2"><%=ContactList[count].name%></td>
      <td class="col-6"><%=ContactList[count].description%></td>
      <td class="text-center col-1"><%=ContactList[count].email%></td>
      <td class="text-center col-1"><%=ContactList[count].number%></td>

      <%if(typeof displayName =='string' && displayName) {%>
      <td class="text-center col-1">
        <a
          href="/contactList/edit/<%=ContactList[count]._id%>"
          class="btn btn-primary"
          ><i class="fas fa-pencil-alt"></i>Edit</a
        >
      </td>
      <td class="text-center col-1">
        <a
          href="/contactList/delete/<%=ContactList[count]._id%>"
          class="btn btn-danger"
          ><i class="fas fa-trash-alt"></i>Delete</a
        >
      </td>
      <%}%>
    </tr>
    <%}%>
  </table>
</div>
